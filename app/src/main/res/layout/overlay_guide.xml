<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlayRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#AA111111"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="260dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:text="Cita SESCAM: te irÃ© guiando" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/btnPrev"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Paso anterior"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_previous" />

            <ImageButton
                android:id="@+id/btnSpeak"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Repetir"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_btn_speak_now" />

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Siguiente paso"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_next" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
